<!-- include header-->
<%-include('include/_header')%>
<!-- /include header-->

<main id="site-main">
  <div class="container">
    <div class="box-nav d-flex justify-between">
      <div class="filter">
        <a href="/"><i class="fas fa-angle-double-left"></i> All Users</a>
      </div>
    </div>
    <div class="form-title text-center">
      <h2 class="text-dark">All Users</h2>
      <span class="text-light">Use the below form to update an account</span>
    </div>
    
    <form method="POST" id="update_user">
        <div class="new_user">
          <div class="form-group">
            <label for="name" class="text-light">Username</label>
            <input type="hidden" name="id" value="<%=user._id%>" />
            <input type="text" name="username" value="<%=user.username%>" placeholder="User 1" />
          </div>
          <div class="form-group">
            <label for="Email" class="text-light">Email</label>
            <input type="email" name="email" value="<%=user.email%>" placeholder="User1@gmail.com" />
          </div>
          <div class="form-group">
            <label for="Phone" class="text-light">Phone</label>
            <input type="text" name="phone" value="<%=user.phone%>" placeholder="11111111111" />
          </div>
          <div class="form-group">
            <label for="DoB" class="text-light">DoB</label>
            <input type="date" name="dob" value="<%=user.dob%>" placeholder="11/11/2011" />
          </div>
          <div class="form-group">
            <button type="submit" class="btn text-dark update">Save</button>
          </div>
        </div>
      </form>
      
  </div>
</main>

<!-- include footer-->
<%-include('include/_footer')%>
<!-- /include footer-->
