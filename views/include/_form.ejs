<form action="/api/users" method="POST" id="add_user">
  <div class="new_user">
    <div class="form-group">
      <label for="name" class="text-light">Username</label>
      <input type="hidden" name="id" value="" />
      <input type="text" name="username" value="" placeholder="User 1" />
    </div>
    <div class="form-group">
      <label for="Email" class="text-light">Email</label>
      <input type="email" name="email" value="" placeholder="User1@gmail.com" />
    </div>
    <div class="form-group">
      <label for="Phone" class="text-light">Phone</label>
      <input type="text" name="phone" value="" placeholder="11111111111" />
    </div>
    <div class="form-group">
      <label for="DoB" class="text-light">DoB</label>
      <input type="date" name="dob" value="" placeholder="11/11/2011" />
    </div>
    <div class="form-group">
      <button type="submit" class="btn text-dark update">Save</button>
    </div>
  </div>
</form>
